<!-- The outermost element below doesn't exist in the data model. -->
<!--  It simulates if the "grouping" were a "container" instead.  -->

<http-client xmlns="urn:ietf:params:xml:ns:yang:ietf-http-client">
  <uri>
    <scheme>https</scheme>
    <authority>
      <userinfo>user:pass</userinfo>
      <host>example.com</host>
      <port>443</port>
    </authority>
    <path>/foo/bar</path>
    <query>query</query>
    <fragment>fragment</fragment>
  </uri>
  <protocol-versions>
    <protocol-version>HTTP/1.1</protocol-version>
    <protocol-version>HTTP/3</protocol-version>
  </protocol-versions>
  <supported-versions>
    <supported-version>HTTP/1.1</supported-version>
    <supported-version>HTTP/2 over TCP</supported-version>
    <supported-version>HTTP/2 over TLS</supported-version>
    <supported-version>HTTP/3</supported-version>
  </supported-versions>
  <tls-client-parameters>
    <client-identity>
      <certificate>
        <central-keystore-reference>
          <asymmetric-key>rsa-asymmetric-key</asymmetric-key>
          <certificate>ex-rsa-cert</certificate>
        </central-keystore-reference>
      </certificate>
    </client-identity>
    <server-authentication>
      <ca-certs>
        <central-truststore-reference>trusted-server-ca-certs</central-truststore-reference>
      </ca-certs>
      <ee-certs>
        <central-truststore-reference>trusted-server-ee-certs</central-truststore-reference>
      </ee-certs>
    </server-authentication>
  </tls-client-parameters>
  <proxy-connect>
    <protocol>CONNECT</protocol>
    <host>proxy.example.org</host>
    <port>4443</port>
  </proxy-connect>
</http-client>
