<!-- The outermost element below doesn't exist in the data model. -->
<!--  It simulates if the "grouping" were a "container" instead.  -->

<http-client xmlns="urn:ietf:params:xml:ns:yang:ietf-http-client">
  <uri>
    <scheme>http</scheme>
    <authority>
      <userinfo>user</userinfo>
      <host>example.com</host>
      <port>80</port>
    </authority>
    <path>/foo/bar</path>
    <query>query</query>
    <fragment>fragment</fragment>
  </uri>
  <protocol-versions>
    <protocol-version>HTTP/2 over TCP</protocol-version>
  </protocol-versions>
  <supported-versions>
    <supported-version>HTTP/1.1</supported-version>
    <supported-version>HTTP/2 over TCP</supported-version>
    <supported-version>HTTP/2 over TLS</supported-version>
    <supported-version>HTTP/3</supported-version>
  </supported-versions>
</http-client>
